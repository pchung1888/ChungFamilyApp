generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FamilyMember {
  id               String             @id @default(cuid())
  name             String
  role             String             // "parent" or "teen"
  email            String?
  userId           String?            @unique
  user             User?              @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime           @updatedAt
  expenses         Expense[]
  tripParticipants TripParticipant[]
}

model CreditCard {
  id               String        @id @default(cuid())
  name             String
  network          String        // "Visa", "Mastercard", "Amex", "Discover"
  lastFour         String
  annualFee        Float
  annualFeeDate    DateTime?
  pointsBalance    Int           @default(0)
  pointsExpiresAt  DateTime?
  pointsName       String        // e.g. "Chase Ultimate Rewards"
  pointsCppValue   Float         // baseline cents-per-point, e.g. 1.5
  isActive         Boolean       @default(true)
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  benefits         CardBenefit[]
  expenses         Expense[]
}

model CardBenefit {
  id          String      @id @default(cuid())
  cardId      String
  card        CreditCard  @relation(fields: [cardId], references: [id], onDelete: Cascade)
  name        String
  value       Float
  frequency   String      // "annual", "monthly", "per_trip"
  usedAmount  Float       @default(0)
  resetDate   DateTime?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Trip {
  id           String            @id @default(cuid())
  name         String
  destination  String
  startDate    DateTime
  endDate      DateTime?
  budget       Float?
  type         String            // "road_trip", "flight", "local"
  notes        String?
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
  expenses        Expense[]
  participants    TripParticipant[]
  settlements     Settlement[]
  itineraryItems  ItineraryItem[]
}

model Expense {
  id                   String           @id @default(cuid())
  tripId               String
  trip                 Trip             @relation(fields: [tripId], references: [id], onDelete: Cascade)
  familyMemberId       String?
  familyMember         FamilyMember?    @relation(fields: [familyMemberId], references: [id], onDelete: SetNull)
  creditCardId         String?
  creditCard           CreditCard?      @relation(fields: [creditCardId], references: [id], onDelete: SetNull)
  paidByParticipantId  String?
  paidByParticipant    TripParticipant? @relation("PaidByParticipant", fields: [paidByParticipantId], references: [id], onDelete: SetNull)
  category             String           // hotel, flight, food, gas, ev_charging, tours, shopping, other
  description          String
  amount               Float
  date                 DateTime
  pointsEarned         Int              @default(0)
  receiptPath          String?
  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
  splits               ExpenseSplit[]
}

model TripParticipant {
  id             String        @id @default(cuid())
  tripId         String
  trip           Trip          @relation(fields: [tripId], references: [id], onDelete: Cascade)
  name           String
  email          String?
  familyMemberId String?
  familyMember   FamilyMember? @relation(fields: [familyMemberId], references: [id], onDelete: SetNull)
  groupName      String?
  createdAt      DateTime      @default(now())
  splits         ExpenseSplit[]
  paidExpenses   Expense[]     @relation("PaidByParticipant")
  settlementsFrom Settlement[] @relation("SettlementFrom")
  settlementsTo   Settlement[] @relation("SettlementTo")

  @@unique([tripId, name])
}

model ExpenseSplit {
  id            String          @id @default(cuid())
  expenseId     String
  expense       Expense         @relation(fields: [expenseId], references: [id], onDelete: Cascade)
  participantId String
  participant   TripParticipant @relation(fields: [participantId], references: [id], onDelete: Cascade)
  amount        Float

  @@unique([expenseId, participantId])
}

model Settlement {
  id        String          @id @default(cuid())
  tripId    String
  trip      Trip            @relation(fields: [tripId], references: [id], onDelete: Cascade)
  fromId    String
  from      TripParticipant @relation("SettlementFrom", fields: [fromId], references: [id], onDelete: Cascade)
  toId      String
  to        TripParticipant @relation("SettlementTo", fields: [toId], references: [id], onDelete: Cascade)
  amount    Float
  note      String?
  settledAt DateTime?
  createdAt DateTime        @default(now())
}

model ItineraryItem {
  id        String   @id @default(cuid())
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id], onDelete: Cascade)
  date      DateTime
  title     String
  type      String   // "accommodation", "activity", "transport", "flight"
  location  String?
  startTime String?  // "09:00" — HH:MM string
  endTime   String?  // "17:00" — HH:MM string
  notes     String?
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Auth.js (NextAuth v5) required models
model User {
  id            String        @id @default(cuid())
  name          String?
  email         String        @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  accounts      Account[]
  sessions      Session[]
  familyMember  FamilyMember?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}
